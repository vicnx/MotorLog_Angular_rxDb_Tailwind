{
    "printWidth": 150,
    "tabWidth": 4,
    "singleQuote": true,
    "bracketSameLine": false,
    "jsxBracketSameLine": true,
    "arrowParens": "always",
    "eslintIntegration": true,
    "trailingComma": "none",
    "htmlWhitespaceSensitivity": "css",
    "useTabs": true,
    "endOfLine": "auto",
    "bracket-same-line": "false",
    "semi": true,
    "overrides": [
        {
            "files": "src/**/*.html",
            "options": {
                "printWidth": 150
            }
        }
    ]
}
